<% end -%>
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_bucket
      - source_labels: [__param_bucket]
        target_label: bucket
      - target_label: __address__
        replacement: localhost:9188

  - job_name: "weblate"
